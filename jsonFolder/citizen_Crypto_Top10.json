{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Citizens' cryptocurrency ownership: top 11 ",
    "subtitle": ["Data scraped from Yahoo Finance and StatisticsTimes pages","Method copies the useful HTML and uses as raw GitHub link"],
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tm19784/tm19784.github.io/main/csvFolder/top10_Crypto_Countries.csv",
    "format": {"type": "csv"}
  },

  "height": 300,
  "width": 300,
  "selection": {
        "Continent": {
            "type": "single",
            "fields": [
                "Continent"
            ],
            "bind": {
                "input": "select",
                "options": [
                    null,
                    "Asia",
                    "Africa",
                    "Europe",
                    "North America",
                    "South America"
                ],
                "name": "Continent:"
            }
        }
    },
    "transform": [{
            "filter": {
                "selection": "Continent"
            }
        }
    ],
  "mark": {"type": "bar", "point": false},
  "encoding": {
    "x": {
      "field": "Country or Area",
      "type": "nominal",
      "title": "Country",
      "axis": {"grid": false}
    },
    "y": {
      "field": "Citizens (%)",
      "type": "quantitative",
      "title": "Percentage of citizens reporting to own cryptocurrency",
      "axis": {"grid": true}
    },
    "color": {"field": "Continent",
              "scale": {"scheme": "dark2"},
              "legend": {"orient":"top-left"}
              },
    "tooltip":[
        {"field":"Citizens (%)", "title": "Citizens (%)", "type":"quantitative" },
        {"field":"Continent", "title": "Continent", "type":"nominal"}
      ]
  }
}
