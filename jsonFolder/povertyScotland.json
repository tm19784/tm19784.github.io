{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Proportion of Scottish households that are working",
    "subtitle": "Yearly observations converted to 3-year averages; source: GOV.UK",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tm19784/tm19784.github.io/main/New%20COVID%20cases%20live%20data.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "filter": {
        "field": "Person type",
        "oneOf": ["Children", "Working-age adults"]
      }
    }
  ],
  "height": 300,
  "width": 300,
  "mark": {"type": "line", "point": false},
  "encoding": {
    "x": {
      "field": "Date",
      "type": "temporal",
      "title": "3-year average; date displayed = final year of three",
      "axis": {"grid": true}
    },
    "y": {
      "field": "Proportion",
      "type": "quantitative",
      "title": "Proportion",
      "axis": {"grid": false}
    },
    "color": {
      "field": "Person type",
      "type": "nominal",
      "scale": {"scheme": "inferno"},
      "title": "Induvidual category",
      "legend": {"orient": "top-left", "fillColor": "#FcFdFd"}
    }
  },
  "config": {}
}
