{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Litecoin price (USD) from 17/08/2016 to 25/10/2021",
    "subtitle": "Daily API values converted into raw data using Python loop",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "#17dbb5",
    "subtitleColor": "#17dbb5"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tm19784/tm19784.github.io/main/jsonFolder/data_FRED-CBLTCUSD.json",
    "format": {"type": "json", "property": "observations"}
  },
  
  "height": 300,
  "width": 300,
  "mark": {
      "type": "line",
      "point": false,
      "interpolate": "linear",
      "color": "aquamarine"},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "title": null,
      "axis": {"grid": true}
    },
    "y": {
      "field": "value",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    }
  },
  "config": {}
}
