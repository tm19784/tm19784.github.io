{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
    "description": "Inflation for Euro area in %",
    
  
    "title": {
      "text": "Inflation, consumer prices for the Euro Area",
      "subtitle":"API URL encoded for CORS reverse proxy; Source: FRED",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
    
    "data": 
      {
        "url": "https://api.allorigins.win/raw?url=https%3A%2F%2Fapi.stlouisfed.org%2Ffred%2Fseries%2Fobservations%3Fseries_id%3DFPCPITOTLZGEMU%26api_key%3D7dbe05263f2257c084f7ec044350a936%26file_type%3Djson",
        "format": {"type": "json", "property": "observations"}
      },
  
    "height": 300,
    "width": 300,
    "mark": {
      "type": "bar",
      "color": "#6b00b3"
    },
    
    "transform": [
      {"calculate":"year(datum.date)", "as": "year"},
      {"filter": "datum.year>minYear"},
      {"filter": "datum.year<maxYear"}
    ],
    
    "params": [
    {"name": "minYear",
      "value": 1961,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2022,
        "step": 1,
        "name": "Start year:"
      }
    },
    {
      "name": "maxYear",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 1961,
        "max": 2022,
        "step": 1,
        "name": "End year:"
      }
    }
   ],
    
    "encoding": {
    
      "x": {
        "field": "date",
        "type": "temporal",
        "axis": {
          "title": "Year (observations on 1st of January)",
          "grid": false,
          "ticks": false
        }
      },
  
      "y": {
        "field": "value",
        "type": "quantitative",
        "title": "Inflation in percent",
        "axis": {"grid": true}
      },
      "tooltip":[
        {"field":"value", "title": "Inflation (%)", "type":"quantitative" },
        {"field":"date", "title": "Date", "type":"temporal" }
      ]
    }
  }
