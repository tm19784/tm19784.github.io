{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  
    "description": "Bitcoin opening price",
  
     "title": {
      "text": "Bitcoin opening price (GBP) over 2021",
      "subtitle":"Source: CoinAPI; 'Month' function is zero-based (slider format - 0=Jan, 1=Feb, ...)",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black",
      "subtitleColor":"black"
    },
    
    "data": {
      "url": "https://rest.coinapi.io/v1/ohlcv/BTC/GBP/history?period_id=8HRS&time_start=2021-01-01T00:00:00&limit=1089&include_empty_items=false&apikey=60BD0DF8-F250-4CF3-B8D7-B023248A51A8"},
    "height": 300,
    "width": 270,
    "transform":[
      {"calculate":"'£'+datum.price_open", "as": "price_open_pounds"},
      {"calculate":"'£'+datum.price_high", "as": "price_high_pounds"},
      {"calculate":"month(datum.time_period_start)", "as": "month_time_period_start"},
      {"filter": "datum.month_time_period_start>minMonth"},
      {"filter": "datum.month_time_period_start<maxMonth"}
    ],
    "mark": {
      "type": "line",
      "point": false,
      "interpolate": "linear",
      "color": "#002fff"
    },
    "params": [
    {
      "name": "minMonth",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 11,
        "step": 1,
        "name": "Start month:"
      }
    },
    {
      "name": "maxMonth",
      "value": 11,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 11,
        "step": 1,
        "name": "End month:"
      }
    }
  ],
    
    "encoding": {
      "x": {
        "field": "time_period_start",
        "type": "temporal",
        "axis": {
          "title": "Time (data pulled from 8-hour intervals)",
          "grid": true,
          "labelSeparation": 20,
          "ticks": false
        }
      },
      "y": {
        "field": "price_open",
        "type": "quantitative",
        "title": "Opening price (£)",
        "axis": {"grid": false}
      },
      "tooltip":[
        {"field":"time_period_start", "title": "Date", "type":"temporal" },
        {"field":"price_open_pounds", "title": "Opening price"},
        {"field": "volume_traded", "title": "Trade volume", "type": "quantitative"},
        {"field": "price_high_pounds", "title": "Highest recorded price"}
      ]
    }
  }
