{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "description": "Live Bitcoin price over recent time",

    "title": {
      "text": "Live Bitcoin price (GBP)",
      "subtitle":"Data pulled at 8-hour intervals; source: CoinAPI",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
      "subtitleColor": "black" 
    },

  "data": {
    "url": "https://raw.githubusercontent.com/tm19784/tm19784.github.io/main/jsonFolder/data_FRED-CBBTCUSD.json",
    "format": {"type": "json", "property": "observations"}
  },
  
  "height": 300,
  "width": 270,
  "mark": {
      "type": "line",
      "point": false,
      "interpolate": "linear",
      "color": "aquamarine"},
    

    
    "encoding": {
      "x": {"field": "time_period_start", "type": "temporal", "title": "Date (8hr intervals)", "axis": {"grid": true}},
      "y": {"field": "price_open", "type": "quantitative", "title": "Coin opening price (GBP)", "axis": {"grid": false}}
      
    },
"config": {}
}
    "layer": [
      
      {"data": {"url": "https://rest.coinapi.io/v1/ohlcv/BTC/GBP/history?period_id=8HRS&time_start=2021-01-20T00:00:00&limit=100000&include_empty_items=false&apikey=1573DA56-C791-474B-B4B5-6A65F1430EF0"},
      "mark": {"type":"line", "color":"#002fff"},
       "transform": [
           {"calculate": "datum.coinName", "as": "BTC"}
      ]
      },

      {"data": {"url": "https://rest.coinapi.io/v1/ohlcv/ETH/GBP/history?period_id=8HRS&time_start=2021-01-20T00:00:00&limit=100000&include_empty_items=false&apikey=1573DA56-C791-474B-B4B5-6A65F1430EF0"},
      "mark": {"type":"line", "color":"#ff00dd"},
       "transform": [
           {"calculate": "datum.coinName", "as": "ETH"}
      ]
      },

      {"data": {"url": "https://rest.coinapi.io/v1/ohlcv/BNB/GBP/history?period_id=8HRS&time_start=2021-01-20T00:00:00&limit=100000&include_empty_items=false&apikey=1573DA56-C791-474B-B4B5-6A65F1430EF0"},
      "mark": {"type":"line", "color":"#00b303"},
       "transform": [
           {"calculate": "datum.coinName", "as": "BNB"}
      ]
      },

      {"data": {"url": "https://rest.coinapi.io/v1/ohlcv/MKR/GBP/history?period_id=8HRS&time_start=2021-01-20T00:00:00&limit=100000&include_empty_items=false&apikey=1573DA56-C791-474B-B4B5-6A65F1430EF0"},
      "mark": {"type":"line", "color":"#ff1a00"},
       "transform": [
           {"calculate": "datum.coinName", "as": "MKR"}
      ]
      }
    ]
}
