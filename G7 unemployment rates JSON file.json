{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Unemployment rate over time in G7 countries",
  
  "title": {
      "text": "G7 countries' unemployment rate (%) 1998-2019",
      "subtitle":"CSV edited; unemployed/labour force. Source: IMF",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"
    },
  
    "data": {
        "url": "https://raw.githubusercontent.com/tm19784/tm19784.github.io/main/G7%20unemployment%20rates.csv",
        "format": {"type": "csv"}
      },
    
       
    "height": 300,
    "width": 300,
    "mark": "line",
    "encoding": {
      "x": {"field": "Year", "type": "temporal", "title": "", "axis": {"grid": false}},
      "y": {
        "field": "Unemployment_rate",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false},
        "sort": [],
        "scale": {"domain": [-0.25, 25]}
      },
      "color": {
        "field": "Country",
        "title": "Country key",
        "legend": {"orient": "top-right"},
        "type": "nominal",
        "sort": [],
        "scale": {"scheme": "yellowgreenblue"}
      },
      "tooltip": [
        {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
        {"field": "Unemployment_rate", "type": "quantitative", "title": "Unemployment rate"},
        {"field": "Country"}
      ]
    }
  }
